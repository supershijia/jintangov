<div id="div_right_left" class="right_left">
  <div class="line">
    <div class="line_left"></div>
    <div class="line_center">新增账号</div>
    <div class="line_right"></div>
  </div>
  <%= form_for @user do |f| %>
      <div class="addnewss">
        <div class="add">
          <label>用户名称：</label>
          <%= f.text_field :name , :class => "input", :size => 30%>
        </div>
        <div class="add">
          <label>所属部门：</label>
          <%=collection_select(:user,:dept_id,Dept.all,:id,:name)%>
        </div>
        <div class="add">
          <label>登录名：</label>
          <%= f.text_field :login_name , :class => "input", :size => 30%>
        </div>
        <div class="add">
          <label>密码：</label>
          <%= f.password_field :password , :class => "input", :value=>"123456",:size => 30%>
        </div>
        <div class="add">
          <label>确认密码：</label>
          <%= f.password_field :password_confirmation , :class => "input",:value=>"123456", :size => 30%>
        </div>

        <%= hidden_field_tag(:roles_erros, "#{@user.errors[:role][0]}") %>
        <%= hidden_field_tag(:assigned_history,"#{params[:assigned_roles]}") %>
        <div class="add" style="clear:both;">
          <br />
          <%=submit_tag "新增", :class=> "button",:id=>"commit" %>
        </div>
  <% end %>
  </div>
</div>



