<%= form_for @user, :url => {:controller => "admin/user_mgms" ,:action => "#{@user.new_record? ? "create" : "update"}" } do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label "姓名：" %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label "部门：" %>
      <%=collection_select(:user,:dept_id,Dept.all,:id,:name)%>
    </div>

    <div class="field">
      <%= f.label "登陆名：" %>
      <%= f.text_field :login_name , :class => "input", :size => 30%>
    </div>
    <div class="field">
      <%= f.label "密码：" %>
      <%= f.password_field :password , :class => "input", :value=>"123456",:size => 30%>
    </div>
    <div class="field">
      <%= f.label "确认密码：" %>
      <%= f.password_field :password_confirmation , :class => "input",:value=>"123456", :size => 30%>
    </div>

    <div class="actions">
      <%= f.submit value="提交" %>
    </div>
<% end %>
