<!--右侧区域start-->
<div class="right_cont">
  <div class="content">
    <!--功能信息展示区start-->
    <div class="bd">
      <div class="bd_top">
        <div class="bd_tl"></div>
        <div class="bd_tr"></div>
        <h3>用户列表</h3></div>
      <div class="bd_cont" style="height:400px">
        <table>
          <tr>
            <th>登陆名</th>
            <th>姓名</th>
            <th>密码</th>
            <th>所属部门</th>
            <th></th>
          </tr>

          <% @users.each do |user| %>
              <tr>
                <td><%= user.login_name %></td>
                <td><%= user.name %></td>
                <td><%= user.password %></td>
                <td><%= user.dept %></td>
                <td><%= link_to '显示', user %></td>
                <td><%= link_to '编辑', edit_user_path(user) %></td>
                <td><%= link_to '删除', user, method: :delete, data: { confirm: '确认删除?' } %></td>
              </tr>
          <% end %>
        </table>

        <br />

        <%= link_to 'New Post', new_admin_user_mgm_path %>

      </div>
    </div>
    <!--功能信息展示区end-->
  </div>
</div>
<!--右侧区域end-->

