<!--右侧区域start-->
<div class="right_cont">
  <div class="content">
    <!--功能信息展示区start-->
    <div class="bd">
      <div class="bd_top">
        <div class="bd_tl"></div>
        <div class="bd_tr"></div>
        <h3>用户信息</h3>
        <div class="control_cont control_cont2">
          <%= link_to '新建部门', new_admin_dept_mgm_path %>
        </div>
      </div>
      <div class="bd_cont" style="height:400px">
        <table>
          <tr>
            <th>姓名</th>
            <th>编码</th>
            <th>操作</th>
          </tr>

          <% @depts.each do |dept| %>
              <tr>
                <td><%= dept.name %></td>
                <td><%= dept.code %></td>
                <td>
                    <%= link_to '显示', admin_dept_mgm_path(dept) %>  |
                    <%= link_to '编辑', edit_admin_dept_mgm_path(dept) %>  |
                    <%= link_to '删除', dept, method: :delete, data: { confirm: '确认删除?' } %>
                </td>
              </tr>
          <% end %>
        </table>
      </div>
    </div>
    <!--功能信息展示区end-->
  </div>
</div>
<!--右侧区域end-->

<!--左边菜单区域-->
<%= left_menu_boards %>